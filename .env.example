# Copy this file to .env if you want to override defaults.
# Docker Compose already injects these, so .env is optional.

# MongoDB (support ticket system)
MONGO_URI=mongodb://mongo:27017
MONGO_DB=cs306_support
MONGO_COLLECTION=tickets

# MySQL (used by htdocs/mysql_tests pages)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=cs306
MYSQL_USER=cs306_user
MYSQL_PASSWORD=cs306_pass
